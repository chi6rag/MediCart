<p id="notice"><%= notice %></p>

<h1>All Products</h1>

<table>
  <thead>
    <tr>
      <th>Image url</th>
      <th>Title</th>
      <th>Price</th>
      <th>Description</th>
      <th>Stock</th>
      <th>Add to Cart</th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
    <tr>
      <td><%= image_tag product.image_url, style: 'height: 150px;' %></td>
      <td><span class="product_title"><%= link_to product.title, product_path(product) %></span><%= product.description %></td>
      <td><%= print_price(product.price) %></td>
      <td></td>
      <td><%= print_stock(product.stock) %></td>
      <td><%= button_to "Add to Cart", order_items_path(product_id: product.id) %></td>
  </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Create a New Product', new_product_path, id: "new_product" %>
